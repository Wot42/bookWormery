<div class="navbar navbar-expand-sm navbar-light navbar-lewagon leather">
  <div class="container-fluid">
    <div class="d-flex align-items-center" >
      <%= link_to "#", class: "navbar-brand" do %>
        <%= image_tag "https://vignette1.wikia.nocookie.net/tinyzoo/images/1/18/Bookworm_single.png/revision/latest?cb=20130717004909" %>
      <% end %>
      <h1>BOOK WORMERY</h1>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto d-flex align-items-center" >
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Catalogue", "#", class: "dropdown-item" %>
              <%= link_to "My Profile", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Catalogue", books_path, class: "text-decoration-none nav-link" %>
          </li>
          <li>
            <%= link_to "Sign Up", new_user_registration_path, class: "text-decoration-none nav-link" %>
          </li>
          <li>
            <%= link_to "Log out", new_user_session_path, class: "text-decoration-none nav-link" %>
          </li>

        <% end %>
      </ul>
    </div>
  </div>
